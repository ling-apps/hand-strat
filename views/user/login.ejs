<div class="block center-block clearfix">
    <h1 class="h1 text-center">Connectez vous !</h1>
    <div class="social-login">
        <div class="social-login-item">
            <a type="button" class="btn btn-login facebook" href="/auth/facebook">
                <em class="logo"></em>
                <span class="btn-login-text">Connectez vous avec Facebook</span>
            </a>
        </div>

        <div class="social-login-item">
            <a type="button" class="btn btn-login google" href="/auth/google">
                <em class="logo"></em>
                <span class="btn-login-text">Connectez vous avec Google</span>
            </a>
        </div>

        <div class="social-login-item">
            <a type="button" class="btn btn-login twitter" href="/auth/twitter">
                <em class="logo"></em>
                <span class="btn-login-text">Connectez vous avec Twitter</span>
            </a>
        </div>
    </div>

    <form action="/auth/local" method="POST" class="form-login pure-form pure-form-aligned">
        <fieldset>
            <div class="pure-control-group">
                <input class="pure-input-1" type="text" name="email" id="email" placeholder="e-mail"/>
            </div>
            <div class="pure-control-group">
                <input class="pure-input-1" type="password" name="password" placeholder="Mot de passe"/>
            </div>
            <button class="pure-button pure-input-1 pure-button-primary" type="submit">Connexion</button>
        </fieldset>
    </form>
</div>
