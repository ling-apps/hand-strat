<div class="block center-block clearfix">
  <h1>Creez votre compte </h3>

  <form action="/register" method="POST">
    <div class="form-group">
      <label for="input-email">Adresse e-mail : </label>
      <input class="form-control" type="text" name="email" id="input-email" />
    </div>

    <div class="form-group">
      <label for="input-password">Mot de passe : </label>
      <input class="form-control" type="password" name="password" id="input-password" />
    </div>

    <div class="actions pull-right">
      <input class="btn btn-primary" type="submit" value="Lancer la creation" />
      <a href="/">Retour</a>
    </div>
  </form>

</div>
